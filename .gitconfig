[commit]
  gpgSign = true
  verbose = true
[core]
  excludesfile = ~/.gitignore
  editor       = nvim
  pager        = delta
[credential "https://github.com"]
  helper = !gh auth git-credential
[credential "https://gist.github.com"]
  helper = !gh auth git-credential
[credential]
  helper = store
[delta]
  file-modified-label = î­ƒ
  line-numbers        = true
  navigate            = true
  side-by-side        = true
  syntax-theme        = Dracula
[diff]
  colorMoved = default
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta --color-only
[user]
  name = Felipe Vieira
  email = nvieirafelipe@gmail.com
[merge]
  conflictstyle = zdiff3
[pull]
  ff = only
[push]
  default = simple
  followTags = true
